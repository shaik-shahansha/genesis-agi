# Genesis AGI Framework Configuration

# Model Provider API Keys
# Get OpenAI key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-key-here

# Get Anthropic key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-key-here

# Get Groq key from: https://console.groq.com/ (free tier available!)
GROQ_API_KEY=your-groq-key-here

# Model Defaults
DEFAULT_REASONING_MODEL=groq/openai/gpt-oss-120b
DEFAULT_FAST_MODEL=groq/llama-3.1-8b-instant
DEFAULT_LOCAL_MODEL=ollama/llama3.1

# Ollama Configuration (for local models)
# Install Ollama from: https://ollama.ai
OLLAMA_BASE_URL=http://localhost:11434

# Consciousness Settings
CONSCIOUSNESS_TICK_INTERVAL=3600  # How often Mind generates autonomous thoughts (seconds)
DREAM_SCHEDULE=02:00  # When Mind dreams (24-hour format)
THOUGHT_GENERATION_ENABLED=true

# Safety
ACTION_LOGGING_ENABLED=true
REQUIRE_APPROVAL_FOR_EXTERNAL_ACTIONS=true
MAX_AUTONOMOUS_ACTIONS_PER_HOUR=100
