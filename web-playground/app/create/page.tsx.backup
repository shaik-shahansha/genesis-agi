                    { value: 'low', label: 'Low', desc: 'Minimal proactivity' },
                    { value: 'medium', label: 'Medium', desc: 'Balanced autonomy' },
                    { value: 'high', label: 'High', desc: 'Fully autonomous' }
                  ].map(level => (
                    <Card
                      key={level.value}
                      hover
                      onClick={() => setFormData({ ...formData, autonomy_level: level.value })}
